<div class="tile is-ancestor">
  <!-- First 1/3 Column -->
  <!-- Intentionally blank -->
  <div class="tile is-parent">
  </div>

  <!-- Middle 2/3 Column -->
  <!-- Form to Contact Us -->
  <div class="tile is-parent">
    <div class="tile is-child">
      <article class="tile is-child notification is-white">
        <p class="title is-2 is-spaced">Contact Us</p>
        <p class="subtitle is-4">Please fill in the below form.</p>
        <div class="field">
          <label class="label">Your Name</label>
          <div class="control">
            <input class="input" type="text" placeholder="Name">
          </div>
        </div>

        <div class="field">
          <label class="label">Your Email (required)</label>
          <div class="control has-icons-left has-icons-right">
            <input class="input is-danger" type="email" placeholder="Email">
            <span class="icon is-small is-left">
              <i class="fa fa-envelope"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <label class="label">Phone Number</label>
          <div class="control">
            <input class="input" type="text" placeholder="Number">
          </div>
        </div>

        <div class="field">
          <label class="label">Message</label>
          <div class="control">
            <textarea class="textarea" placeholder="Message"></textarea>
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-primary">Submit</button>
          </div>
          <div class="control">
            <button class="button">Cancel</button>
          </div>
        </div>

      </article>
    </div>
      <!-- End of middle contact box -->
  </div>

    <!-- Last 3/3 Column -->
    <!-- Intentionally blank -->
  <div class="tile is-parent">
  </div>

</div>
