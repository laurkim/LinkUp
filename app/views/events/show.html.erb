<div class="header">
  <%= link_to "Back to Search Results", search_results_path %>
  <%= link_to "Create a new search", events_path %>
</div>

<div class="spotlight">
  <img src="<%= @event.image_url %>" alt="">
  <h2><%= @event.name %></h2>
  <h4>Start Time: <%= @event.start_time %></h3>
  <h4>End Time: <%= @event.end_time %></h3>

  <h4>Description:</h4>
  <p><%= @event.description %></p>

  <h4><%= link_to "Link to EventBrite Page", @event.url %></h4>
  <h4><%= link_to "Add Event to Profile", user_path(@user) %></h4>
</div>


<div class="round" style="text-align: right;">
  <% @event.users.each do |user| %>
    <img src="<%= user.prof_pic_url %>" alt="profile picture">
  <% end %>
</div>
