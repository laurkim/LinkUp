<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><%= link_to "Back to Search Results", search_results_path %></li>
    <li><%= link_to "Create a new search", events_path %></li>
  </ul>
</nav>

<div class="tile is-ancestor">
  <div class="tile is-4 is-parent is-vertical">
    <!-- 1/3 -->
    <div class="tile is-child">
      <img src="<%= @event.image_url %>" alt="">
      <h2><%= @event.name %></h2>
      <h4>Start Time: <%= @event.start_time.strftime("%a - %m/%d/%Y - %I:%M %p") %></h3>
      <h4>End Time: <%= @event.end_time.strftime("%a - %m/%d/%Y - %I:%M %p") %></h3>

      <br>

      <h4>Description:</h4>
      <p><%= @event.description %></p>

      <h4><%= link_to "Link to EventBrite Page", @event.url %></h4>
      <%= form_tag user_event_path do %>
        <%= hidden_field_tag "event_id", @event.id %>
        <%= submit_tag "Add Event to Profile" %>
      <% end %>
    </div>

  </div>
  <!-- end of left tile stack -->

  <div class="tile is-6 is-parent is-vertical">
    <div class="tile is-child is-vertical">

      <!-- old form -->
      <%= form_tag comments_path do %>
        <%= hidden_field_tag :'comment[user_id]', session[:user_id] %>
        <%= hidden_field_tag :'comment[event_id]', @event.id %>
        <p>
          <label class="label">New Comment</label>
          <input type="text" class="textarea" name='comment[content]' rows="2" placeholder="Write a new comment here.">
        </p>
        <div class="control">
          <button class="button is-primary is-small">Submit</button>
        </div>
      <% end %>

    </div>
    <!-- end of comment text box -->

    <label class="label">Comments</label>
    <!-- This tile will take the rest: 2/3 -->
    <% if !(@comments.empty?) %>
      <% @comments.each do |comment| %>
        <div class="tile is-child is-vertical">

          <div class="heart">
            <%= link_to content_tag(:span), { controller: "likes", action: "create", like: { user_id: session[:user_id], comment_id: comment.id, active: 'true'}, event_id: @event.id }, method: "post", class: "fa fa-heart #{check_if_clicked(comment, session[:user_id])}" %>

            <b><%= count_likes(comment.likes) %></b>

          </div>

          <div class="content">
            <b><%= comment.user.name %> : <%= comment.created_at.strftime("%a - %m/%d/%Y - %I:%M %p") %></b>
            <br>
            <%= comment.content %>
          </div>

        </div>
      <% end %>
      <!-- end of comment iteration -->
    <% end %>
    <!-- end of if statement -->

  </div>
  <!-- end of comment stack -->
</div>
