<h1>Event Index (This page contains the query form and we'll get user_id from session)</h1>

<div class="events_form">
  <h4>Event Form</h4>

  <%= form_tag events_path do %>
    <p>
      <%= label_tag "Search Keyword: " %>
      <%= text_field_tag :'event[search_keyword]' %>
    </p>

    <p>
      <%= label_tag "Zipcode: " %>
      <%= text_field_tag :'event[zipcode]' %>
    <p>

    <p>
      <%= label_tag :radius %>
      <%= text_field_tag :'event[radius]' %>
    <p>

    <p>
      <%= label_tag :price %>
      <%= text_field_tag :'event[price]' %>
    <p>

    <p>
      <%= label_tag :start_date %>
      <%= text_field_tag :'event[start_date]' %>
    <p>

    <p>
      <%= submit_tag "Submit" %>
    <p>
  <% end %>
</div>
