
<div class="tile is-ancestor">

  <!-- First 1/3 Column -->
  <!-- Intentionally blank -->
  <div class="tile is-parent">
  </div>

  <!-- Middle 2/3 Column -->
  <!-- Form to Create Account -->
  <div class="tile is-parent">
    <div class="tile is-child">
      <article class="tile is-child notification is-white">
        <p class="title is-2 is-spaced">Register for LinkUp</p>

        <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@user.errors.count, "error") %>
            prohibited this account from being created:
          </h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>


        <div class="field">
          <%= form_for @user, controller: 'users', action: 'create', :html => {:multipart => true} do |f| %>

          <label class="label">First Name</label>
          <div class="control">
            <input class="input" type="text" name="user[name]" id="user_name" placeholder="First Name">
          </div>

          <label class="label">Username</label>
          <div class="control">
            <input class="input" type="text" name="user[username]" id="user_username" placeholder="Username">
          </div>

          <label class="label">Password</label>
          <div class="control">
            <input class="input" type="password" name="user[password]" id="user_password" placeholder="Password">
          </div>
          <br>
          <div class="control">
            <input class="input" type="password" name="user[password_confirmation]" id="user_password_confirmation" placeholder="Confirm Password">
          </div>

          <label class="label">Upload a Profile Picture</label>
          <div class="control">
            <input class="input" type="file" name="user[image]" id="user_image">
          </div>

          <div class="control">
            <button class="button is-primary">Create Account</button>
          </div>

          <% end %>
        </div>

      </article>
    </div>
    <!-- End of middle create account box -->
  </div>

  <!-- Last 3/3 Column -->
  <!-- Intentionally blank -->
  <div class="tile is-parent">
  </div>

</div>
